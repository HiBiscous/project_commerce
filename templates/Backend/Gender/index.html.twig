{% extends 'base.html.twig' %}

{% block title %}
	Genre
	{{ parent() }}
{% endblock %}
{% block body %}
	<section class="container">
		<h1 class="text-center">Administration des genres</h1>
		<a href="{{path('admin.gender.create')}}" class="btn btn-primary">Créer un Genre</a>
		<div>
			{% for gender in genders %}

				<p>{{ gender.name }}</p>
				<p>{{ gender.enable ? 'Actif' : 'Inactif' }}</p>
				<a href="{{path('admin.gender.update', {id:gender.id} ) }}" class="btn btn-primary">Modifier</a>
				<form action="{{ path('admin.gender.delete', {id: gender.id}) }}" method="POST" onsubmit="return confirm('Etes vous sûr de vouloir supprimer ce genre ?')">
					<input type="hidden" name="token" value="{{csrf_token('delete' ~ gender.id)}}">
					<button type="submit" class="btn btn-danger">Supprimer</button>
				</form>


			</div>
		{% endfor %}
	</div>
</section>{% endblock %}
